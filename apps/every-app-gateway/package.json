{
  "name": "every-app-gateway",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "types:check": "npx tsc --noEmit",
    "format:check": "npx prettier --check .",
    "format:write": "npx prettier . --write",
    "build": "vite build && tsc --noEmit",
    "build:debug": "DEBUG_BUILD=true vite build && tsc --noEmit",
    "start": "node .output/server/index.mjs",
    "deploy": "npm run db:migrate:prod && npm run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface Env",
    "auth:generate": "npx @better-auth/cli@latest generate --config src/auth/index.ts --output src/db/auth.schema.ts -y",
    "auth:update": "pnpm run auth:generate",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote",
    "db:studio:dev": "drizzle-kit studio",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/query-core": "^5.90.7",
    "@tanstack/query-db-collection": "^1.0.0",
    "@tanstack/query-sync-storage-persister": "^5.90.9",
    "@tanstack/react-db": "^0.1.44",
    "@tanstack/react-query": "5.90.7",
    "@tanstack/react-query-persist-client": "^5.90.9",
    "@tanstack/react-router": "1.131.10",
    "@tanstack/react-router-devtools": "1.131.10",
    "@tanstack/react-start": "1.131.11",
    "better-auth": "^1.3.7",
    "drizzle-orm": "^0.44.4",
    "jose": "^6.0.12",
    "lucide-react": "^0.540.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "tailwindcss": "^4.1.11",
    "tiny-invariant": "^1.3.3",
    "vite-plugin-pwa": "^1.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250820.0",
    "@libsql/client": "^0.15.15",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^22.5.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.6.0",
    "chalk": "^5.6.2",
    "daisyui": "^5.4.7",
    "drizzle-kit": "^0.31.4",
    "knip": "^5.66.4",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2",
    "vite": "^7.1.2",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.29.1"
  }
}
