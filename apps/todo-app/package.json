{
  "name": "todo-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && tsc --noEmit",
    "preview": "npm run build && vite preview --port 3001",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "test": "vitest run",
    "test:watch": "vitest",
    "types:check": "npx tsc --noEmit",
    "format:check": "npx prettier --check .",
    "format:write": "npx prettier . --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "wrangler d1 migrations apply todo-app --local",
    "db:migrate:prod": "wrangler d1 migrations apply todo-app --remote",
    "db:studio:dev": "drizzle-kit studio",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio",
    "knip": "knip"
  },
