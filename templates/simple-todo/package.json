{
  "name": "simple-todo-template",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && tsc --noEmit",
    "preview": "npm run build && vite preview --port 3001",
    "deploy": "npm run db:migrate:prod && npm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "test": "vitest run",
    "test:watch": "vitest",
    "types:check": "npx tsc --noEmit",
    "format:check": "npx prettier --check .",
    "format:write": "npx prettier . --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "wrangler d1 migrations apply simple-todo-template --local",
    "db:migrate:prod": "wrangler d1 migrations apply simple-todo-template --remote",
    "db:studio:dev": "drizzle-kit studio",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio",
    "knip": "knip"
  },
  "dependencies": {
    "@tanstack/db": "^0.4.14",
    "@tanstack/query-core": "^5.90.5",
    "@tanstack/query-db-collection": "^0.2.36",
    "@tanstack/query-sync-storage-persister": "^5.90.9",
    "@tanstack/react-db": "^0.1.36",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-persist-client": "^5.90.9",
    "@tanstack/react-router": "^1.131.10",
    "@tanstack/react-router-devtools": "^1.131.10",
    "@tanstack/react-start": "^1.131.11",
    "cloudflare": "^5.2.0",
    "drizzle-orm": "^0.44.4",
    "jose": "^6.0.12",
    "lucide-react": "^0.542.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.16",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.18",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^22.18.13",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.6.0",
    "drizzle-kit": "^0.31.4",
    "knip": "^5.66.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.45.3"
  }
}
